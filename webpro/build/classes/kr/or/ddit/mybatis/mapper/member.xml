<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	
	<!-- 
	
		이 영역에 SQL문에 맞는 태그를 사용하여 SQL문을 기술한다.
		
		사용할 수 있는 기본적인 태그들
		<select> ~~~ </select>
		<insert> ~~~ </insert>
		<update> ~~~ </update>
		<delete> ~~~ </delete>
		
		위 태그에사 사용되는 주요 속성들
		
		1) id : 해당 태그를 호출할 때 사용되는 고유한 이름
		2) parameterType : SQL문에 사용될 데이터를 담은 객체타입을 지정한다.(생략가능)
		                (보통 VO클래스, 자바의 자료형이름 등이 사용된다.)
		                (typeAlias로 지정한 별명을 사용할 수 있다.)
		3) resultType : select문을 실행한 결과를 담을 객체타입을 지정한다.
		                (보통 VO클래스, 자바의 자료형이름 등이 사용된다.)
		                (typeAlias로 지정한 별명을 사용할 수 있다.)
		4) resultMap : 결과 레코드 컬럼명과 VO객체의 속성명이 다를 경우에 적절한 
		               매핑정보를 제공하기 위해 사용된다.
	 -->
	
	 
	 <!--  전체리스트-->
	 <select id="selectAllMember" resultType="memVO"> //alias 이름있어서 memVO
	 
	 	select * from member
	 	
	 </select>
	 <!--  로긴-->
	 <select id="loginMember" resultType="kr.or.ddit.member.vo.MemberVO" parameterType="map">
	     select * from member
	     where mem_id = #{mem_id} and  mem_pass = #{mem_pass}
	 </select>
	 
	<!-- 아이디 중복검사  -->
	

	 <select id="selectById" parameterType="String" resultType="string">
	 select mem_id from member 
	 where mem_id = #{data} <!-- 파라미터 1개 있을시 아무거나 써도 됨.. -->
	 
	 
	</select>
	 
	 
	 <!--  가입하기 -->
	 <insert id="memberJoin" parameterType="kr.or.ddit.member.vo.MemberVO">
	 	insert into member(
	 			 MEM_ID
				,MEM_PASS
				,MEM_NAME
				,MEM_BIR
				,MEM_ZIP
				,MEM_ADD1
				,MEM_ADD2
				,MEM_HP
				,MEM_MAIL)
       values(	
	 	        #{mem_id}
				,#{mem_pass}
				,#{mem_name}
				,#{mem_bir}
				,#{mem_zip}
				,#{mem_add1}
				,#{mem_add2}
				,#{mem_hp}
				,#{mem_ma
				il}
				)
	 <!--  ctrl+s#{hift + y 소문자 변경       ///values값은 vo의 속상 값임...-->
	 </insert>
</mapper>