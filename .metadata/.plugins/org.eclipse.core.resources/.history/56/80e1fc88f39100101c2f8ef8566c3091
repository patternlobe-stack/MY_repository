<style>
span{
background :yellow;
}
</style>
<script>
$(function(){
	
	// text() 버튼 클릭 시
	$('#text').on('click', function(){
	    ptext = $('p').text();  // 모든 p 태그 텍스트 합침 /게터
	    $('#result1').text(ptext);  // result1에 출력 /세터
	});
	
	// html() 버튼 클릭 시
	$('#html').on('click', function(){
	    phtml = $('p').html();  // 첫 번째 p 태그의 HTML 내용 /게터
	$('#result1').html(phtml);  // result1에 HTML로 출력 /세터
	
	})
	
	//html()를 이용해서 모든 p를 대상으로 값 가져오기 
	$('#htmlroop').on('click', function(){

	    $('p').each(function(i, item){
	        
	    	console.log($('p').html())
	    })
	})
	
})
</script>


</head>
<body>


<div class="box">
      <h3>
 
