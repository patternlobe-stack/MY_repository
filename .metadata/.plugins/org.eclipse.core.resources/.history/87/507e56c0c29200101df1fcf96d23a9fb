$('#btn2').on('click', ()=>{
	
	//img태그 만들기
	vimg = $(`<img src='../images/국화1.jpg' alt='국화1.jpg'>`);
//	$('#result2').prepend(vimg)

	$(vimg).prependTo($('#result2'))

})
	$('#btn3').on('click', ()=>{
		vimg = $(`<img src='../images/가구1.jpg' alt='가구1.jpg'>`);
		$('#result3').after(vimg);
		$(vimg).insertAfter($('result3'))
	})
	$('#btn4').on('click', ()=>{
		vimg = $(`<img src='../images/호랑이.jpg' alt='가구1.jpg'>`);
		$('#result4').before(vimg);

		
	})
	
	$('.boxp p')
		
})

</script>

