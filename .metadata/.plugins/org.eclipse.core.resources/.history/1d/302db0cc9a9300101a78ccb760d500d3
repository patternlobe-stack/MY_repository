<mapper namespace="prod">

<!-- 대분류 -->
	 <select id="selectByLprod" resultType="lprodVO" >
	 select *from lprod
	 
	 </select>
<!-- 	 소분류
 -->	 <select id="selectByLgu" resultType="prodVO" parameterType="string">
	 select prod_id, prod_name from prod
		where lprod_gu = #{data}
		</select>
	 <select id="selectById" resultType="prodVO" parameterType="string">
	select * from prod where prod_id=#{data}
	</select>
</mapper>