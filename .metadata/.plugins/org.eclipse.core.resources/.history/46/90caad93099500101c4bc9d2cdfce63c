package kr.or.ddit.util;

import kr.or.ddit.board.vo.SearchVO;

public class PageInfo {
	private int totalRecord;
	private int totalPage;
	
	private int perList; 
	private int perPage;// 화면에 출력할 페이지 개수
	
	private int page; //계산을 위해서
	
	private int startPage;
	private int endPage;
	private int start;
	private int end;
	
	private SearchVO searchvo; //page, stype, sword

	//--------------------------------------
	
	public int getTotalPage() {
		return totalPage;
	}

	public void setTotalPage(int totalPage) {
		this.totalPage = totalPage;
	}

	public int getStartPage() {
		return startPage;
	}

	public void setStartPage(int startPage) {
		this.startPage = startPage;
	}

	public int getEndPage() {
		return endPage;
	}

	public void setEndPage(int endPage) {
		this.endPage = endPage;
	}

	public int getStart() {
		return start;
	}

	public void setStart(int start) {
		this.start = start;
	}

	public int getEnd() {
		return end;
	}

	public void setEnd(int end) {
		this.end = end;
	}

	public int getTotalRecord() {
		return totalRecord;
	}

	public int getPerList() {
		return perList;
	}

	public int getPerPage() {
		return perPage;
	}

	public SearchVO getSearchvo() {
		return searchvo;
	}

	public void setSearchvo(SearchVO searchvo) {
		this.searchvo = searchvo;
	}

	public void setTotalRecord(int totalRecord) {
		this.totalRecord = totalRecord;
	}
	
	public void setPerList(int perList) {
		this.perList = perList;
	}
 
	public void setPerPage(int perPage) {
		this.perPage = perPage;
	}

	public int getPage() {
		return page;
	}

	public void setPage(int page) {
		this.page = page;
	}
//-------------------------------------------
	 public void setStart() {
		 //삭제시 page : 7 , 다시구한 totalPage : 6
		 //7페이지가 없어졌기 떼문에 page를 다시 구한 totalPage로 변경
		 if(page > totalPage) page = totalPage;
		 this.start = (page-1) * perList + 1;
	 }

	
	 public void setEnd() {
		 this.end = start + perList - 1;
		 if(end > totalRecord) end = totalRecord;
	}
		
	 public void setStartPage() {
		 if(page > totalPage) page = totalPage;
		 this.startPage = ((page-1) / perPage * perPage) + 1;
	 }
		
	 public void setEndPage() {
		
		 this.endPage = startPage + perPage - 1 ; 
		 if(endPage > totalPage) endPage = totalPage;
	 }
	
	public void setTotalPage() {
		totalPage = (int)Math.ceil(totalRecord/(double)perList);
	}
//----------------------------------------------	
	@Override
	public String toString() {
		
		 return "totalRecord count = " + totalRecord + "\n" +
		"totalPage= " + totalPage + "\n" +
		"start= " + start + "\n" +
		"end= " + end + "\n" +
		"startPage= " + startPage + "\n" +
		"endPage= " + endPage + "\n" ;
	}
	
}
