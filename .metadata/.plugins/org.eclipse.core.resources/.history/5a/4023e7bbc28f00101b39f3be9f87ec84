<script>
const pclick = ()=>{
	alert("hello");
}

const proc1 =() =>{
	
	//p태그를 새롭게 생성하기
	//ptag = $("<p class='pp' onclick='pclick()'>Hello JQuery</p>)";
        ptag = $("<p>", { 
        class: "pp",
        text: "Hello JQuery", 
        click: pclick 
				//	click : function(){	
					//}
	});


	
	//result1에 ptag를 추가ㅎ
	$('#result1').append(ptag);
}

imgs=["gsjLogo2.png","coffee1.jpg","Tulips.jpg","국화2.jpg","국화3.jpg","국화4.jpg"]

const proc2 =() =>{
	
	rand = parseInt(Math.random()*imgs.length);
	
	img = $("<img>",{
		
			class:'cc',
			src : ' ../images/' + imgs[rand],
			alt : imgs[rand],
			click: function(){
				// this.style.border="2px solid blue";
				$(this).css('border', '2px solid blue')

			}//click
	})//img
}//proc2


</script>

