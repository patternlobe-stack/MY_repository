<script>
$(()=>{
    $('#hid').on('click',()=>{
        let str = "";
        $('p:hidden').each(function(){
            str += $(this).text() + "<br>";
        });
        $("#result1").html(str);
    });
    
    $('#visi').on('click',function(){
    	let str = "";
    	$('p:visible').each(function(){
    		str +=$(this).text()+"<br>";
    		
    	})
    	$("result2").html(str);
    })
    //---------
    
    $('#hid2').on('click',function(){
    	$('#testForm *:hidden').each(function(){
    	 alert(this.tagName)	
    	})
    })
})
</script>

