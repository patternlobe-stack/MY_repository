<script>
const proc1 =()=>{
	
		//p태그검색
		ptag = document.querySelectorAll('p');
	//	ptag.style.color = 'red'; //오류발생 
		
		ptag[0].style.color = "red";
	
	/*	ptag[1].css('color','blue');
		ptag[1]는 script방식으로 document로 부터 얻어진 변수
		css()라는 jquery메소드를 사용할 수 없다. */
		
		//script 방식으로 document로 부터 얻어진 변수에 $()로 감싸면
		//jquery변수가 된다. 
		$(ptag[1]).css('color','blue');
		
}

</script>

</head>
<body>


<div class="box">
