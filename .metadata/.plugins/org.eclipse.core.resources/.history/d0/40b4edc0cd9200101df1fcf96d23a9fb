	$('.box2 img').on('mouseover', function(){
		
		//현재 이미지의 src 값을 가져온다. 저장한다.
		vsrc=$(this).attr('src');
		
		//현재 이미지의 속성 - data - img의 값을 가져온다.
		data=$(this).attr('data-img')
		//현재 이미지의 속성 - src 값을 변경한다.
			

		})
		
	$('.box2 img').on('mouseout', function(){
		//저장되어 있는 원래의 src값을 현재 이미지에 src 속성 값으로 변경 
		
	})
})


