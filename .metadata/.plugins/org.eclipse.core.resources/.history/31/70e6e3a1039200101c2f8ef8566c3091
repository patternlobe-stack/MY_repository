<script>
$( () =>{
	$('#btn1').on('click',()=>{
		
		$(' .box1 li:first, li:last').css('background','yellow');
	//	$(' .box1 li').first().css('background','yellow');
	//	$(' .box1 li').last().css('background','yellow');
		$(' .box1 li').filter(':first').css('background','yellow');
	
	  //$(' .box1 lli:eq(5)').css('background','red');
		$(' .box1 li').eq(5).css('background','red');
		$(' .box1 li').filter(':eq(5)').css('background','red');
		
	//	$(' .box1 li:lt(4)').css({'font-size':'2.0rem','font-weight':'bold'});
	//	$(' .box1 li').lt(4).css({'font-size':'2.0rem','font-weight':'bold'}); 오류남 
	$(' .box1 li').filter(':lt(4)').css({'font-size':'2.0rem','font-weight':'bold'});
		
	})
	
	
	 $('#btn2').on('click', ()=>{
		
		 $(' .box2 li:even').css('background','lime');
		 $(' .box2 li').even().css('background','lime');
		 $(' .box2 li').filter(':even').css('background','lime');
		 
		 $(' .box2 li:odd').css('background','lime');
		 $(' .box2 li').odd().css('background','lime');
		 $(' .box2 li').filter(':even').css('background','lime');
		 
	 })
})
</script>

