@Override
public List<BoardVO> pageByList(PageInfo pinfo) {
	List<BoardVO>list = null;
	SqlSession sql = MyBatisUtil.getSqlSession();  
	try {
		list=sql.selectList("board.getListCount"); //그래서 동적 조건으로 한거야?? 
	} catch (Exception e) {
        e.printStackTrace();
}finally {
	sql.close();
}
	return list;
}

