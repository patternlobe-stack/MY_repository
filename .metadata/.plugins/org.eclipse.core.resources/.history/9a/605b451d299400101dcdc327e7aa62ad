package kr.or.ddit.lprod.controller;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import kr.or.ddit.lprod.service.IProdService;
import kr.or.ddit.lprod.service.ProdServiceImpl;
import kr.or.ddit.lprod.vo.ProdVO;

import java.io.IOException;
import java.util.List;

/**
 * Servlet implementation class ProdList
 */
@WebServlet("/ProdList.do")
public class ProdList extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public ProdList() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// 클라이언트에서 전송데이타 받기 
		
		String lgu = request.getParameter("lgu");
		//서비스 객체 얻기 
		
		IProdService service = ProdServiceImpl.getService();
		
		List<ProdVO> list = service.selectByLgu(lgu);
		
		
		request.setAttribute("result", list);
		
		request.getRequestDispatcher("/0917/view/prod.jsp").forward(request,response);
	}

}
